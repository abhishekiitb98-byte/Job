        // Function to render job cards
        function renderJobs(jobsToDisplay) {
            const jobListings = document.getElementById('jobListings');
            jobListings.innerHTML = '';

            jobsToDisplay.forEach(job => {
                const jobCard = document.createElement('div');
                jobCard.className = 'col-md-6 col-lg-4';
                jobCard.innerHTML = `
                    <div class="job-card card p-3">
                        <div class="card-body">
                            <h5 class="job-title">${job.title}</h5>
                            <h6 class="job-organization">${job.organization}</h6>
                            <p class="job-location">${job.remote_derived ? 'Remote' : ''} ${job.locations_derived.join(', ')}</p>
                            <p class="job-description">${job.description_text}</p>
                            <a href="${job.url}" target="_blank" class="btn btn-primary apply-btn">Apply Now</a>
                        </div>
                    </div>
                `;
                jobListings.appendChild(jobCard);
            });
        }

        // Initial render
        renderJobs(jobs);

        // Search filter functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const filteredJobs = jobs.filter(job => 
                job.title.toLowerCase().includes(searchTerm) || 
                job.locations_derived.some(loc => loc.toLowerCase().includes(searchTerm))
            );
            renderJobs(filteredJobs);
        });
    </script>
